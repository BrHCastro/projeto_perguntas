<%- include('partials/_header') -%>
<%- include('partials/_nav') -%>

<div class="container">
    <div class="card mt-4 p-4 shadow rounded">
        <div class="card-header">
            <h3>Faça usa pergunta:</h3>
        </div>
        <div class="card-body">
            <form action="/savequestion" method="POST">
                <label for="title">Título:</label>
                <input class="form-control" type="text" name="title" placeholder="Título" />
                <br />
                <label for="desc">Descrição:</label>
                <textarea class="form-control" name="desc" placeholder="Descreva sua pergunta aqui."></textarea>
                <br />
                <button type="submit" class="btn btn-primary">Enviar!</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/_footer') -%>